<!doctype html>
<html lang="en" class="h-100 no-js">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>DataMeta</title>

        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@500&display=swap" rel="stylesheet"> 

        <!-- Bootstrap core CSS -->
        <link href="${request.static_url('datameta:static/node_modules/bootstrap/dist/css/bootstrap.min.css')}" rel="stylesheet">
        <!-- Bootstrap icon CSS -->
        <link href="${request.static_url('datameta:static/node_modules/bootstrap-icons/font/bootstrap-icons.css')}" rel="stylesheet">

        <style>
            .bd-placeholder-img {
                font-size: 1.125rem;
                text-anchor: middle;
                -webkit-user-select: none;
                -moz-user-select: none;
                user-select: none;
            }

            @media (min-width: 768px) {
                .bd-placeholder-img-lg {
                    font-size: 3.5rem;
                }
            }
            .container {
              max-width: 960px;
            }
            .link-bare, .link-bare:link, .link-bare:hover {
                color: inherit;
                text-decoration: inherit;
            }
            .bg-lightgreen{
                background-color: #b7ecd4
            }
        </style>
        <metal:macro metal:define-slot="head"/>
        <script>(function(e,t,n){var r=e.querySelectorAll("html")[0];r.className=r.className.replace(/(^|\s)no-js(\s|$)/,"$1js$2")})(document,window,0);</script>
        <script>
        // Toggles the widescreen view according to the current setting of the
        function toggle_widescreen() {

            container = document.getElementById("container_main");
            flexSwitch = document.getElementById("flexSwitchWidescreen");

            // Cookie expires one day after it has last been set
            d = new Date();
            d.setTime(d.getTime() + 24*60*60*1000);
            expires = d.toUTCString();
            if (flexSwitch.checked) {
                container.classList.add("container-fluid");
                container.classList.remove("container");
                container.classList.add("px-4");
                document.cookie = "widescreen=true; expires=" + expires + "; path=/; SameSite=Lax";
            } else {
                container.classList.add("container");
                container.classList.remove("container-fluid");
                container.classList.remove("px-4");
                document.cookie = "widescreen=false; expires=" + expires + "; path=/; SameSite=Lax";
            }
        }

        function init_widescreen() {

            widescreenCookie = document.cookie.split("; ").find(row=>row.startsWith("widescreen=")).split('=')[1];
            if(widescreenCookie == "true") {

                container = document.getElementById("container_main");
                container.classList.add("container-fluid");
                container.classList.remove("container");
                container.classList.add("px-4");

                flexSwitch = document.getElementById("flexSwitchWidescreen");
                flexSwitch.checked = true;
            }
        }

        </script>
        <script>
            window.DataMeta = {};
            DataMeta.toolTips = [];
            DataMeta.popoverList = [];
        </script>
    </head>
    <body class="d-flex flex-column h-100" onload=init_widescreen()>

        <header class="sticky-top d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-body border-bottom border-warning">
            <p class="h5 my-0 me-md-auto fw-normal" style="font-family: 'Fira Sans', sans-serif;">
                <a href="/home" class="link-bare">
                    <span style="color:#ffca2c">D</span>ata<span style="color:#ffca2c">M</span>eta
                </a>
            </p>

            <p class="my-0 me-4 fst-italic">
            ${request.session['user_fullname']} (${request.session['user_groupname']})
            </p>
            <nav class="my-2 my-md-0 me-md-3">
                <a class="p-2 text-dark" href="/submit">Submit New</a>
                <a class="p-2 text-dark" href="/view">View Data</a>
                <a class="p-2 text-dark" href="/account">Account</a>
            </nav>
            <a tal:condition="request.session['site_admin'] or request.session['group_admin']" class="ms-2 btn btn-outline-danger" href="/admin">Admin</a>
            <a class="ms-2 btn btn-outline-danger" href="/login">Logout</a>
        </header>

        <main class="flex-shrink-0">
            <div id="container_main" class="container mb-5 pb-4">
                <div metal:define-slot="content">No content</div>
            </div>
        </main>

        <footer class="fixed-bottom footer mt-auto py-3 bg-light">
            <div class="container position-relative">
                <span class="text-muted">&copy; 2021 DataMeta</span><span tal:condition="request.registry.settings.get('datameta.demo_mode')"> (DEMO MODE)</span>
                    <div class="form-check form-switch position-absolute top-50 end-0 translate-middle">
                      <input class="form-check-input" type="checkbox" name="flexSwitchWidescreen" id="flexSwitchWidescreen" onClick="toggle_widescreen()">
                      <label class="form-check-label" for="flexSwitchWidescreen">
                        Widescreen
                      </label>
                    </div>
            </div>

        </footer>

        <script src="${request.static_url('datameta:static/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js')}"></script>

        <metal:macro metal:define-slot="body"/>
    </body>
</html>
